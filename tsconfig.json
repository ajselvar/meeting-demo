{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "./**/*"
  ]
}